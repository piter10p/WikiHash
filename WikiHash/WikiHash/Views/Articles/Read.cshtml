@model WikiHash.Models.Articles.ArticleViewModel
@{ 
    ViewBag.Title = Model.Title;
}
<div class="article-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                CONTENTS
            </div>
            <div class="col-10">
                <header>
                    <h1 class="underlined article-title">@Model.Title</h1>
                </header>
                <article>
                    @foreach(var bodySection in Model.Body.Sections)
                    {
                        <section>
                            <h3 class="underlined">@bodySection.Title </h3>

                            <div class="row">
                                @foreach (var frame in bodySection.Frames)
                                {
                                    <div class="col@{@WikiHash.Models.Articles.Bodies.FrameWidthParser.ToBootstrapString(frame.Width)} ">
                                        <p>@frame.Text</p>
                                    </div>
                                }
                            </div>
                        </section>
                    }
                </article>
            </div>
        </div>
    </div>
</div>
