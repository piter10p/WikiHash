@model WikiHash.Models.Medias.MediaViewModel
@{
    ViewBag.Title = "Media: " + Model.Title;

    var category = "";

    if (Model.CategoryName == null)
    {
        category = "Uncategorised";
    }
    else
    {
        category = Model.CategoryName;
    }
}
<div class="article-body">
    <div class="container">
        <h1 class="underlined">Media: @Model.Title</h1>
        <br />
        <div id="media-container"></div>
        <br /><br />
        <p class="text-justify">@Model.Description</p>
        <p>Category: @category</p>
        <p>Creation date: @Model.CreationDate</p>
    </div>
</div>

@section scripts {
    <script>
        var content = getFigureContent(@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model)), "img-fluid");
        $("div#media-container").append(content);
    </script>
}
